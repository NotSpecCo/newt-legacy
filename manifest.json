{
	"manifest_version": 2,
	
	"name": "Newt - A Better New Tab",
	"short_name": "Newt",
	"author": "Garrett Downs",
	"description": "A replacement for Google Chrome's 'new tab' page that lets you easily access your favorite bookmarks, apps, and more.",
	"version": "5.6.2",
	"icons": {
		"256": "assets/icon-256.png",
		"128": "assets/icon-128.png",
		"64": "assets/icon-64.png",
		"32": "assets/icon-32.png",
		"48": "assets/icon-48.png",
		"24": "assets/icon-24.png",
		"16": "assets/icon-16.png"
	},
	"chrome_url_overrides" : {
		"newtab": "index.html"
	},
	"options_page": "options_page/options.html",
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"background": {
		"scripts": ["node_modules/chrome-promise/chrome-promise.js", "js/background.js"]
	},
	"permissions" : [
		"bookmarks",
		"management",
		"topSites",
		"sessions",
		"tabs",
		"contextMenus",
		"storage"
	]
}